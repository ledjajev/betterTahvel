{
  "manifest_version": 3,
  "name": "Better Tahvel",
  "version": "0.0.1",
  "description": "Better Tahvel",
  "action": {
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": ["storage", "contextMenus", "tabs", "scripting"],
  "host_permissions": ["*://tahvel.edu.ee/*"],
  "content_scripts": [
    {
      "all_frames": true,
      "match_about_blank": true,
      "matches": ["*://tahvel.edu.ee/*"],
      "run_at": "document_start",
      "exclude_globs": ["*/chrome/newtab*"],
      "js": ["js/main.js"],
      "css": ["css/universal.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["css/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
